<?xml version="1.0" encoding="UTF-8"?>
<!-- 将文档类型定义写在xml中 -->
<!DOCTYPE root[
<!ELEMENT root (font)>
<!ELEMENT font (name,size)>
<!ELEMENT name (#PCDATA)>
<!ELEMENT size (#PCDATA)>
<!ATTLIST size unit CDATA "x">
]>
<root>
	<font>
		<name>Helvetica</name>
		<size unit="px">36</size>
	</font>
</root>